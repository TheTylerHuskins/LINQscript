{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "removeComments": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*"
  ]
}